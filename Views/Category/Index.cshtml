@model IEnumerable<MyBlog.Models.Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">All categories:</h2>
        </div>
        <div>
            @foreach(var obj in Model)
            {
                <div>@obj.CategoryName</div>
            }
        </div>
        <div class="col-6 text-end">
            <a asp-area="" asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create Category
            </a>
        </div>
    </div>
</div>
