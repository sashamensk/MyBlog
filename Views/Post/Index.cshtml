@model IEnumerable<MyBlog.Models.Post>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">All posts:</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-area="" asp-controller="Post" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Post
            </a>
        </div>
    </div>
</div>
<br />
<br />

@foreach (var obj in Model)
{
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
        </thead>
        <tbody>
            <tr>
            <tr>
                <td>
                    <h2 class="header"> @obj.Title </h2>
                </td>

            </tr>
            <tr>
                <td>
                        @obj.PostCategory
                </td>
            </tr>
            <tr>
                <td>
                        @obj.Description
                </td>
            </tr>
            <tr>
                <td>
                        @obj.Text
                </td>
            </tr>
            <tr>
                <td>
                        @obj.CreatedDateTime
                </td>
            </tr>
            <tr>
                <td>
                    <div class="w-25 btn-group" role="group">
                        <a asp-controller="Post" asp-action="Edit" asp-route-id="@obj.Id"
                       class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-controller="Post" asp-action="Delete" asp-route-id="@obj.Id"
                       class="btn btn-danger mx-2"> <i class="bi bi-trash3"></i> Delete</a>
                    </div>
                </td>
            </tr>

        </tbody>


    </table>
}

