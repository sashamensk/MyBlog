@model MyBlog.Models.Post

<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Post</h2>
            <hr />
            @*<div asp-validation-summary="All"></div>*@
            <div class="mb-3">
                <label asp-for="Title"></label>
                <input asp-for="Title" diasbled class="form-control" />
            </div>
            <br /> <br />
            <div class="mb-3">
                <label asp-for="Description"></label>
                <input asp-for="Description" disabled class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Text"></label>
                <input asp-for="Text" class="form-control" />
            </div>
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <a asp-controller="post" asp-action="index" class="btn btn-secondary" style="width:150px">
            back to list
        </a>
    </div>
</form>

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
}
}
