@model IEnumerable<MyBlog.Areas.Admin.Models.User>
@{
    ViewBag.Title = "UserList";
}
 
<a asp-action="Create">Add new user</a>
 
<table class="table">
    <tr><th>Email</th><th>DateOfBirth</th><th></th></tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>@user.Year</td>
            <td>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-area = "Admin" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                    <a class="btn btn-sm btn-primary" asp-area = "Admin" asp-action="ChangePassword" asp-route-id="@user.Id">ChangePassword</a>
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>